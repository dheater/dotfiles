# This is Git's per-user configuration file.
[user]
name = Daniel Heater
email = daniel@heatertech.com

[includeIf "gitdir:~/src-imprivata/"]
    path = ~/src=imprivata/.gitconfig
	
[alias]
    co = checkout
    ci = commit
    st = status -s
    br = branch
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    type = cat-file -t
    dump = cat-file -p
[color]
	ui = auto
[core]
	exludesfile = home/dheater/.gitignore_global
	excludesfile = /home/dheater/.gitignore_global
	autocrlf = input
[push]
	default = matching
[pull]
	rebase = false
[commit]
	gpgSign = true
[tag]
	gpgSign = true
